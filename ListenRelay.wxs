<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Product Id="*" Name="ListenRelay" Language="1033" Version="1.0.0.0" Manufacturer="Punk Science Studios Inc." UpgradeCode="e1a2b3c4-d5e6-4f7g-8h9i-j0k1l2m3n4o5">
        <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

        <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
        <MediaTemplate EmbedCab="yes" />

        <Feature Id="ProductFeature" Title="ListenRelay" Level="1">
            <ComponentGroupRef Id="ProductComponents" />
            <ComponentRef Id="ApplicationShortcut" />
            <ComponentRef Id="StartupShortcut" />
        </Feature>

        <Icon Id="icon.ico" SourceFile="icon.ico"/>
        <Property Id="ARPPRODUCTICON" Value="icon.ico" />
    </Product>

    <Fragment>
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFilesFolder">
                <Directory Id="INSTALLFOLDER" Name="ListenRelay" />
            </Directory>
            <Directory Id="ProgramMenuFolder">
                <Directory Id="ApplicationProgramsFolder" Name="ListenRelay"/>
            </Directory>
            <Directory Id="StartupFolder" Name="Startup" />
        </Directory>
    </Fragment>

    <Fragment>
        <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
            <Component Id="MainExecutable" Guid="*">
                <File Id="ListenRelayEXE" Source="ListenRelay.exe" KeyPath="yes" Checksum="yes" />
            </Component>
            <Component Id="ManifestFile" Guid="*">
                <File Id="ManifestFILE" Source="ListenRelay.exe.manifest" />
            </Component>
            <Component Id="LuaExtension" Guid="*">
                <File Id="LuaEXT" Source="listenrelay.lua" />
            </Component>
            <Component Id="AppIcon" Guid="*">
                <File Id="AppICO" Source="icon.ico" />
            </Component>
        </ComponentGroup>

        <DirectoryRef Id="ApplicationProgramsFolder">
            <Component Id="ApplicationShortcut" Guid="*">
                <Shortcut Id="ApplicationStartMenuShortcut" 
                          Name="ListenRelay" 
                          Description="Bridge between VLC and Listenbrainz"
                          Target="[#ListenRelayEXE]"
                          WorkingDirectory="INSTALLFOLDER"
                          Icon="icon.ico"/>
                <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
                <RegistryValue Root="HKCU" Key="Software\ListenRelay" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
            </Component>
        </DirectoryRef>

        <DirectoryRef Id="StartupFolder">
            <Component Id="StartupShortcut" Guid="*">
                <Shortcut Id="AppStartupShortcut"
                          Name="ListenRelay"
                          Description="Starts ListenRelay on startup"
                          Target="[#ListenRelayEXE]"
                          Arguments="--minimized"
                          WorkingDirectory="INSTALLFOLDER" />
                <RegistryValue Root="HKCU" Key="Software\ListenRelay" Name="startup" Type="integer" Value="1" KeyPath="yes" />
            </Component>
        </DirectoryRef>
    </Fragment>
</Wix>
